<!-- src/templates/email/price_alert.hbs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Price Alert - {{data.symbol}}</title>
</head>
<body style="font-family: Arial, sans-serif; line-height: 1.6; color: #333; margin: 0; padding: 0;">
    <div style="max-width: 600px; margin: 0 auto; padding: 20px;">
        <div style="background: #d69e2e; color: white; padding: 20px; text-align: center; border-radius: 8px 8px 0 0;">
            <h1 style="margin: 0;">Price Alert Triggered</h1>
        </div>
        
        <div style="padding: 30px; background: #f8f9fa; border-radius: 0 0 8px 8px;">
            <h2 style="color: #d69e2e; margin-top: 0;">{{data.symbol}} Price Movement</h2>
            
            <div style="background: white; padding: 20px; border-radius: 8px; margin: 20px 0; text-align: center;">
                <h3 style="margin: 0; font-size: 32px; color: #1a365d;">${{data.currentPrice}}</h3>
                <p style="margin: 10px 0; color: {{#if data.isIncrease}}#38a169{{else}}#e53e3e{{/if}}; font-weight: bold;">
                    {{data.direction}} ${{data.targetPrice}}
                </p>
                <p style="margin: 0; color: #666;">
                    Change: {{data.changePercent}}% ({{data.changeAmount}})
                </p>
            </div>
            
            <p>{{message}}</p>
            
            <div style="text-align: center; margin: 30px 0;">
                <a href="{{data.chartUrl}}" style="display: inline-block; padding: 12px 24px; background: #d69e2e; color: white; text-decoration: none; border-radius: 6px; margin-right: 10px;">View Chart</a>
                <a href="{{data.tradeUrl}}" style="display: inline-block; padding: 12px 24px; background: #1a365d; color: white; text-decoration: none; border-radius: 6px;">Trade Now</a>
            </div>
        </div>
        
        <div style="text-align: center; padding: 20px; font-size: 12px; color: #666;">
            <p>&copy; {{year}} Nexus Trade AI. All rights reserved.</p>
        </div>
    </div>
</body>
</html>